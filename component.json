  "credentials": {
    "fields": {
        "baseUrl": {
            "label": "Web Service URL",
            "viewClass": "TextFieldView",
            "required": true
        },
        "user": {
            "label": "Username",
            "viewClass": "TextFieldView",
            "required": true
        },
        "password": {
          "label": "Password",
          "viewClass": "TextFieldView",
          "required": true
        }
    }
  },
  "actions": { 
