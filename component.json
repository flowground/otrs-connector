{
    "title": "OTRS",
    "description": "Connector for handling OTRS tickets",
    "credentials": {
        "fields": {
            "baseUrl": {
                "label": "Web Service URL:",
                "viewClass": "TextFieldView",
                "required": true
            },
            "user": {
                "label": "Username:",
                "viewClass": "TextFieldView",
                "required": true
            },
            "password": {
                "label": "Password:",
                "viewClass": "TextFieldView",
                "required": true
            }
        }
    },
    "triggers": {
        "getNewTickets": {
            "main": "./lib/triggers/getNewTickets.js",
            "type": "polling",
            "title": "Get New Tickets",
            "fields": {
                "startDateTime": {
                    "label": "Tickets created since:",
                    "required": true,
                    "viewClass": "TextFieldWithNoteView",
                    "placeholder": "yyyy-mm-dd hh:mm:ss",
                    "note": "Please use <code><b>yyyy-mm-dd hh:mm:ss</b></code> format and use the same timezone as the one configured in OTRS."
                },
                "queues": {
                    "label": "Get tickets from queues:",
                    "required": true,
                    "viewClass": "TextFieldWithNoteView",
                    "placeholder": "queue names",
                    "note": "Separate queue names with a single comma. Do not enclose in quotes."
                },
                "limit": {
                    "label": "Max number of tickets to retrieve:",
                    "viewClass": "TextFieldWithNoteView",
                    "note": "Default is 50. If there are more tickets than this, they will be retrieved the next time the trigger is run."
                }
            },
            "metadata": {
                "out": "./lib/schemas/ticket.out.json"
            }
        },
        "getUpdatedTickets": {
            "main": "./lib/triggers/getUpdatedTickets.js",
            "type": "polling",
            "title": "Get Updated Tickets",
            "fields": {
                "startDateTime": {
                    "label": "Tickets updated since:",
                    "required": true,
                    "viewClass": "TextFieldWithNoteView",
                    "placeholder": "yyyy-mm-dd hh:mm:ss",
                    "note": "Please use <code><b>yyyy-mm-dd hh:mm:ss</b></code> format and use the same timezone as the one configured in OTRS."
                },
                "queues": {
                    "label": "Get tickets from queues:",
                    "required": true,
                    "viewClass": "TextFieldWithNoteView",
                    "placeholder": "queue names",
                    "note": "Separate queue names with a single comma. Do not enclose in quotes."
                },
                "limit": {
                    "label": "Max number of tickets to retrieve:",
                    "viewClass": "TextFieldWithNoteView",
                    "note": "Default is 50. If there are more tickets than this, they will be retrieved the next time the trigger is run."
                }
            },
            "metadata": {
                "out": "./lib/schemas/ticket.out.json"
            }
        }
    },
    "actions": {
        "createTicket": {
            "main": "./lib/actions/createTicket.js",
            "title": "Create ticket",
            "metadata": {
                "in": "./lib/schemas/createTicket.in.json",
                "out": "./lib/schemas/ticket.out.json"
            }
        },
        "updateTicket": {
            "main": "./lib/actions/updateTicket.js",
            "title": "Update Ticket",
            "metadata": {
                "in": "./lib/schemas/updateTicket.in.json",
                "out": "./lib/schemas/ticket.out.json"
            }
        },
        "getTicket": {
            "main": "./lib/actions/getTicket.js",
            "title": "Get Ticket",
            "metadata": {
                "in": "./lib/schemas/getTicket.in.json",
                "out": "./lib/schemas/ticket.out.json"
            }
        }
    }
}
